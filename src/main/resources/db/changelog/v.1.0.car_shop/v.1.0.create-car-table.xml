<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="car-initial-v.1.0" author="Alexandr Krylov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="car" schemaName="car_shop"/>
            </not>
        </preConditions>
        <createTable tableName="car" schemaName="car_shop">
            <column name="car_id" type="SERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="brand" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="model" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="year" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="price" type="NUMERIC">
                <constraints nullable="true"/>
            </column>
            <column name="condition" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="car-populate-v.1.0" author="Alexandr Krylov">
        <loadData
                file="db/data/car-data.csv"
                tableName="car"
                schemaName="car_shop"
                separator=",">
            <column name="brand" type="string"/>
            <column name="model" type="string"/>
            <column name="year"/>
            <column name="price"/>
            <column name="condition" type="string"/>
        </loadData>
    </changeSet>

</databaseChangeLog>
